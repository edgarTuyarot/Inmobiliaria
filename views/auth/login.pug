extends ../layout/index


block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center bus
            span.font-normal Cancha
        h2.text-center.text-3xl.font-extrabold= pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="text-red-500 text-center m-1 mx-auto font-bold bg-or")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(action="/auth/login" method="POST")
                    input(type="hidden", name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#mail.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeolder-gray-400(placeholder="tu email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeolder-gray-400(placeholder="password" type="password" name="password")
                    div(class="flex items-center justify-between")
                        a(href="/auth/registro" class="text-gray-500 text-sm") ¿No tenes cuenta? Creala
                        a(href="/auth/reset-password" class="text-gray-500 text-sm") ¿Olvidaste tu password?
                    input(type="submit" value="iniciar sesion" class="w-full bg-indigo-500 hover:bg-indigo-300 text-white font-bold py-3 cursor-pointer")